{
  "info": {
    "_postman_id": "mvp-platform-001",
    "name": "MVP Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for MVP platform backend testing"
  },
  "item": [
    {
      "name": "Register Admin User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"admin1\",\"password\":\"adminpass\",\"role\":\"admin\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api","auth","register"]
        }
      }
    },
    {
      "name": "Register Normal User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"user1\",\"password\":\"userpass\",\"role\":\"user\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api","auth","register"]
        }
      }
    },
    {
      "name": "Login Admin User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"admin1\",\"password\":\"adminpass\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api","auth","login"]
        }
      },
      "response": []
    },
    {
      "name": "Login Normal User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"user1\",\"password\":\"userpass\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api","auth","login"]
        }
      }
    },
    {
      "name": "Create Company (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Tech Corp\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/companies",
          "host": ["{{baseUrl}}"],
          "path": ["api","companies"]
        }
      }
    },
    {
      "name": "Create Job (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\":\"Software Engineer\",\"description\":\"Develop applications\",\"company\":\"{{companyId}}\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/jobs",
          "host": ["{{baseUrl}}"],
          "path": ["api","jobs"]
        }
      }
    },
    {
      "name": "List Available Jobs (User)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{userToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/jobs",
          "host": ["{{baseUrl}}"],
          "path": ["api","jobs"]
        }
      }
    },
    {
      "name": "Apply for Job (User)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{userToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/jobs/{{jobId}}/apply",
          "host": ["{{baseUrl}}"],
          "path": ["api","jobs","{{jobId}}","apply"]
        }
      }
    },
    {
      "name": "List My Applications (User)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{userToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/applications/my",
          "host": ["{{baseUrl}}"],
          "path": ["api","applications","my"]
        }
      }
    },
    {
      "name": "List Applications for a Job (Admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/applications/job/{{jobId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","applications","job","{{jobId}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "userToken",
      "value": ""
    },
    {
      "key": "companyId",
      "value": ""
    },
    {
      "key": "jobId",
      "value": ""
    }
  ]
}
